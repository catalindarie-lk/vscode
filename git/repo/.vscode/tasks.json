{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build UDP Program",
      "type": "shell",
      "command": "${workspaceFolder}\\udp_build.bat",
      "args": [
        "${workspaceFolder}",
        "${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build udp_server or udp_client selectively"
    }
  ]
}


