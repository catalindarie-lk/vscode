{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",      // Generate debugging information (.pdb)
                "/EHsc",    // Enable exception handling (C++ standard)
                "/favor:AMD64",
                "${file}",
                "/O2",
                "/Fe${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
                "/Fo${workspaceFolder}\\obj\\${fileBasenameNoExtension}.obj",
                "/Fd${workspaceFolder}\\bin\\${fileBasenameNoExtension}.pdb",
                "/link",
                "/MACHINE:X64",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}